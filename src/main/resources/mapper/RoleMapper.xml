<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bing.framework.mapper.RoleMapper">

    <resultMap id="BaseResultMap" type="com.bing.framework.entity.Role">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="code" property="code"/>
        <result column="description" property="description"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 根据用户ID查询用户拥有的角色列表 -->
    <select id="findRolesByUserId" resultMap="BaseResultMap">
        SELECT r.*
        FROM role r
        LEFT JOIN user_role ur ON r.id = ur.role_id
        WHERE ur.user_id = #{userId}
        AND r.status = 1
        ORDER BY r.id
    </select>

    <!-- 检查角色编码是否已存在 -->
    <select id="checkCodeExist" resultType="java.lang.Integer">
        SELECT COUNT(1)
        FROM role
        WHERE code = #{code}
        <if test="id != null">
            AND id != #{id}
        </if>
    </select>
</mapper>