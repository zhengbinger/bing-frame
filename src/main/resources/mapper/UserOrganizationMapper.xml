<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bing.framework.mapper.UserOrganizationMapper">

    <resultMap id="BaseResultMap" type="com.bing.framework.entity.UserOrganization">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="organization_id" property="organizationId"/>
        <result column="is_main" property="isMain"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <resultMap id="UserOrganizationResultMap" type="com.bing.framework.entity.UserOrganization" extends="BaseResultMap">
        <!-- 关联用户信息 -->
        <association property="user" column="user_id" select="com.bing.framework.mapper.UserMapper.selectById"/>
        <!-- 关联组织信息 -->
        <association property="organization" column="organization_id" select="com.bing.framework.mapper.OrganizationMapper.selectById"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, user_id, organization_id, is_main, create_time, update_time
    </sql>

    <!-- 根据用户ID查询用户关联的组织列表 -->
    <select id="selectByUserId" resultMap="UserOrganizationResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_organization
        WHERE user_id = #{userId}
        ORDER BY is_main DESC, create_time DESC
    </select>

    <!-- 根据组织ID查询关联的用户列表 -->
    <select id="selectByOrganizationId" resultMap="UserOrganizationResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_organization
        WHERE organization_id = #{organizationId}
        ORDER BY create_time DESC
    </select>

    <!-- 查询用户的主组织 -->
    <select id="selectMainOrganizationByUserId" resultMap="UserOrganizationResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_organization
        WHERE user_id = #{userId}
        AND is_main = true
        LIMIT 1
    </select>

    <!-- 检查用户是否已关联指定组织 -->
    <select id="existsByUserIdAndOrganizationId" resultType="java.lang.Boolean">
        SELECT COUNT(*) > 0
        FROM user_organization
        WHERE user_id = #{userId}
        AND organization_id = #{organizationId}
    </select>

    <!-- 清除用户的主组织标识 -->
    <update id="clearMainOrganizationByUserId" resultType="java.lang.Integer">
        UPDATE user_organization
        SET is_main = false
        WHERE user_id = #{userId}
    </update>

</mapper>